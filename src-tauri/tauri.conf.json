{
  "productName": "Dynasty Desktop",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "targets": ["msi", "nsis"]
  },
  "app": {
    "windows": [{ "title": "Dynasty Desktop", "width": 1280, "height": 840, "decorations": true }]
  },
  "plugins": {
    "http": {
      "permissions": [
        {
          "identifier": "http:default",
          "allow": [
            { "url": "https://api.sleeper.app/**" },
            { "url": "https://raw.githubusercontent.com/**" },
            { "url": "https://cdn.jsdelivr.net/**" }
          ]
        }
      ]
    }
  }
}
